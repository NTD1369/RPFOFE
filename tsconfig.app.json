/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.json",
  "angularCompilerOptions": {
    "enableIvy": true
  },
  "compilerOptions": {
    "outDir": "./out-tsc/app",
     
    "paths": {
      "tslib" : ["path/to/node_modules/tslib/tslib.d.ts"],
      "exceljs": [
        "node_modules/exceljs/dist"
      ]
    },
    "types": ["node"]
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ]
}
